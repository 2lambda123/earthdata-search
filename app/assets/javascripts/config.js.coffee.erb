# Environment-specific config
@edsc.config = do (env='<%= Rails.env %>') ->

  csrfToken = document.querySelector?('meta[name=csrf-token]')?.content

  <% if Rails.env.test? %>
  # Test config
  exports =
    defaultAnimationDurationMs: 0
    maxPolygonSize: 50
    csrfToken: csrfToken

  <% elsif Rails.env.development? %>
  # Development config
  exports =
    defaultAnimationDurationMs: 300
    maxPolygonSize: 50
    csrfToken: csrfToken

  <% elsif Rails.env.production? %>
  # Production config
  exports =
    defaultAnimationDurationMs: 300
    maxPolygonSize: 50
    csrfToken: csrfToken

  <% end %>
