<!-- ko if: !ui.accountForm.isEditingAccount() -->
<!-- ko with: account -->
  <p>
    <span data-bind="text: firstName"></span> <span data-bind="text: lastName"></span> (<span data-bind="text: email"></span>)<br>
    <!-- ko if: organizationName() -->
    <span data-bind="text: organizationName"></span><br>
    <!-- /ko -->
    <span data-bind="text: address.street1"></span><br>
    <!-- ko if: address.street2() -->
    <span data-bind="text: address.street2"></span><br>
    <!-- /ko -->
    <!-- ko if: address.street3() -->
    <span data-bind="text: address.street3"></span><br>
    <!-- /ko -->
    <span data-bind="text: address.city"></span>,
    <!-- ko if: address.country() == 'United States' -->
    <span data-bind="text: address.state"></span>
    <!-- /ko -->
    <!-- ko if: address.country() != 'United States' -->
    <span data-bind="text: address.country"></span>
    <!-- /ko -->
    <span data-bind="text: address.zip"></span><br>
    <span data-bind="text: phone.number"></span>
    <!-- ko if: fax.number() -->
    (Phone)<br>
    <span data-bind="text: fax.number()"></span> (Fax)
    <!-- /ko -->
  </p>
  <p>
    <a href="#" data-bind="click: $root.ui.accountForm.editAccount">Edit</a>
  </p>
<!-- /ko -->
<!-- /ko -->
<!-- ko if: ui.accountForm.isEditingAccount() -->
<!-- ko with: account -->

  <!-- ko if: errors() -->
  <p data-bind="foreach: errors">
    <span class="error" data-bind="text: $data"></span>
  </p>
  <!-- /ko -->

  <!-- ko if: message() -->
  <p class="confirmation-message" data-bind="text: message"></p>
  <!-- /ko -->

  <p class="required">
    <label for="firstName">First name</label>
    <input data-bind="value: firstName" id="firstName" size="30" type="text">
  </p>
  <p class="required">
    <label for="lastName">Last name</label>
    <input data-bind="value: lastName" id="lastName" size="30" type="text">
  </p>
  <p class="required">
    <label for="email">Email</label>
    <input data-bind="value: email" id="email" size="30" type="text">
  </p>
  <p>
    <label for="organizationName">Organization name</label>
    <input data-bind="value: organizationName" id="organizationName" size="30" type="text">
  </p>

  <h4>Address</h4>

  <p data-bind="css: {required: $root.ui.accountForm.isServiceForm}">
    <label for="address_street1">Street</label>
    <input data-bind="value: address.street1" id="address_street1" maxlength="128" size="30" type="text">
  </p>
  <p>
    <label></label>
    <input data-bind="value: address.street2" id="address_street2" maxlength="128" size="30" type="text">
  </p>
  <p>
    <label></label>
    <input data-bind="value: address.street3" id="address_street3" maxlength="128" size="30" type="text">
  </p>
  <p data-bind="css: {required: $root.ui.accountForm.isServiceForm}">
    <label for="address_city">City</label>
    <input data-bind="value: address.city" id="address_city" size="30" type="text">
  </p>
  <p data-bind="css: {required: $root.ui.accountForm.isServiceForm}">
    <label for="address_country">Country</label>
    <select data-bind="value: address.country" id="address_country">
      <%= render partial: "users/country_options" %>
    </select>
  </p>
  <!-- ko if: address.country() == 'United States' -->
  <p data-bind="css: {required: $root.ui.accountForm.isServiceForm}">
    <label for="address_state">State</label>
    <select data-bind="value: address.state" id="address_state">
      <%= render partial: "users/state_options" %>
    </select>
  </p>
  <!-- /ko -->
  <p data-bind="css: {required: $root.ui.accountForm.isServiceForm}">
    <label for="address_zip">Zip</label>
    <input data-bind="value: address.zip" id="address_zip" size="30" type="text">
  </p>

  <h4>Phone</h4>

  <p data-bind="css: {required: $root.ui.accountForm.isServiceForm}">
    <label for="phone_number">Phone number</label>
    <input data-bind="value: phone.number" id="phone_number" size="30" type="text">
  </p>
  <p>
    <label for="fax_number">Fax number</label>
    <input data-bind="value: fax.number" id="fax_number" size="30" type="text">
  </p>

  <p>
    <label for="notificationLevel">Receive delayed access notifications</label>
    <select data-bind="value: notificationLevel" id="notificationLevel">
      <option value="VERBOSE">Always</option>
      <option value="DETAIL">When requests change state</option>
      <option value="INFO">When requests reach a completed or failed state</option>
      <option value="CRITICAL">When requests fail</option>
      <option value="NONE">Never</option>
    </select>
  </p>
<!-- /ko -->
<!-- /ko -->
