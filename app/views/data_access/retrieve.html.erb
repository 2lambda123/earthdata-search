<% content_for :javascript do %>
  <script>
    this.edscPageData = <%= raw @project.to_json %>;
  </script>
  <%= javascript_include_tag "data_access" %>
<% end %>

<% content_for :toolbar do %>
  <%= render partial: 'shared/login' %>
<% end %>


<section class="data-access">
  <nav class="data-access-nav">
    <a href="javascript:history.back()"><i class="edsc-icon-arrow-left"></i> Back to Search Session</a>
  </nav>
  <header class="data-access-header">
    <h1>Success!</h1>
    <p>Your request has been processed.  See below for information on accessing your data.</p>
  </header>
  <section class="data-access-content" data-bind="visible: ui.projectList.downloadableDatasets().length > 0">
    <h2>The following datasets are available for immediate download</h2>
    <ul class="data-access-datasets-list" data-bind="foreach: ui.projectList.downloadableDatasets">
      <li>
        <p class="data-access-dataset-name" data-bind="text: dataset_id"></p>
        <div class="data-access-dataset-actions">
          <a class="btn btn-primary" href="#" target="_blank" data-bind="attr: {href: granuleDownloadsUrl}">Download URLs</a>
        </div>
      </li>
    </ul>
  </section>
  <section class="data-access-next">
    <h2>Next Steps</h2>
    <ul>
      <li><a class="link" href="#">Back to Earthdata Search Results</a></li>
      <li><a class="link" href="#">Start a new New Earthdata Search</a></li>
    </ul>
  </section>
</section>
