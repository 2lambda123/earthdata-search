            <li data-bind="click: $parent.ui.datasetsList.clickDataset, css: {'view-dataset': $root.datasets.hasVisibleDataset($data)}" class="panel-list-item master-overlay-forward">
              <!-- ko if: thumbnail -->
              <img class="panel-list-thumbnail" data-bind="attr: {src: thumbnail, alt: dataset_id}">
              <!-- /ko -->
              <!-- ko ifnot: thumbnail -->
              <div class="panel-list-thumbnail panel-list-thumbnail-placeholder">
                No image available
              </div>
              <!-- /ko -->
              <h3 data-bind="text: dataset_id"></h3>
              <div class="panel-list-item-actions">
                <!-- ko if: $root.query.canQueryDatasetSpatial($data) -->
                <a href="#" class="button icon-button" title="Search using this dataset's location"
                   data-bind="css: {'button-active': $root.query.spatial() == spatial_constraint()}, click: $root.query.toggleQueryDatasetSpatial">
                  <i class="edsc-icon-location"></i>
                </a>
                <!-- /ko -->
                <a href="#" class="button icon-button" title="View dataset" data-bind="visible: !$root.datasets.hasVisibleDataset($data), click: $root.datasets.toggleVisibleDataset">
                  <i class="edsc-icon-eye"></i>
                </a>
                <a href="#" class="button icon-button button-active" title="View dataset" data-bind="visible: $root.datasets.hasVisibleDataset($data), click: $root.datasets.toggleVisibleDataset">
                  <i class="edsc-icon-eye"></i>
                </a>
                <!-- ko if: $parent.ui.projectList.visible -->
                <a href="#" data-bind="visible: !$root.project.isSearchingGranules($data), click: $root.project.searchGranules" class="button icon-button master-overlay-hide-parent master-overlay-show-secondary" title="Filter granules">
                  <i class="edsc-icon-compose"></i>
                </a>
                <a href="#" data-bind="visible: $root.project.isSearchingGranules($data), click: $root.project.clearSearchGranules" class="button icon-button button-active master-overlay-hide-parent master-overlay-hide-secondary" title="Filter granules">
                  <i class="edsc-icon-compose"></i>
                </a>
                <!-- /ko -->
                <a href="#" class="button icon-button" data-pulse="#project-count" title="Add dataset to the current project"
                   data-bind="visible: !$root.project.hasDataset($data), click: $root.project.toggleDataset">
                  <i class="edsc-icon-plus"></i>
                </a>
                <a href="#" class="button icon-button button-active" data-pulse="#project-count" title="Remove dataset from the current project"
                   data-bind="visible: $root.project.hasDataset($data), click: $root.project.toggleDataset">
                  <i class="edsc-icon-minus"></i>
                </a>
              </div>
              <p class="panel-list-details">
              <span data-bind="text: short_name"></span>
              <!-- ko if: version_id() != 'Undefined' -->
              v<span data-bind="text: version_id"></span>
                <!-- /ko -->
              - <span data-bind="text: archive_center"></span>
              </p>
            </li>
