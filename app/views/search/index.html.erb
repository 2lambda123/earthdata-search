<% content_for :toolbar do %>
  <%= form_tag('/', method: 'get', class: 'auto-submit') do %>
    <p>
      <input id="keywords" name="keywords" data-bind="value: query.keywords, valueUpdate: 'keyup'" placeholder="Type any topic or dataset name" autofocus>
    </p>
  <% end %>
  <div class="dropdown">
    <a href="#" class="button dropdown-button temporal-dropdown-button">
      <i class="fa fa-clock-o"></i>
      <span class="dropdown-value">Temporal</span>
      <i class="fa fa-caret-down dropdown-icon"></i>
    </a>
    <ul class="dropdown-menu temporal-dropdown">
      <li>
        <ul class="nav nav-tabs">
          <li class="active"><a href="#temporal-date-range" data-toggle="tab">Date Range</a></li>
          <li><a href="#temporal-recurring" data-toggle="tab">Recurring</a></li>
        </ul>
        <div class="tab-content">
          <div id="temporal-date-range" class="tab-pane active">
            <div class="datetime-field" id="temporal_start_button">
              <label for="temporal_start">Start</label>
              <%= text_field_tag(:temporal_start, params[:temporal_start],
                                 :placeholder => 'YYYY-MM-DD HH:MM:SS',
                                 :class => 'temporal temporal-range-picker temporal-range-start') %>
              <button id="clear_temporal_start" class="button temporal-clear" type="button">Clear</button>
            </div>
            <div class="datetime-field" id="temporal_end_button">
              <label for="temporal_stop">End</label>
              <%= text_field_tag(:temporal_stop, params[:temporal_end],
                                 :placeholder => 'YYYY-MM-DD HH:MM:SS',
                                 :class => 'temporal temporal-range-picker temporal-range-stop') %>
              <button id="clear_temporal_stop" class="button temporal-clear" type="button">Clear</button>
            </div>
          </div>
          <div id="temporal-recurring" class="tab-pane">
            <div class="datetime-field" id="temporal_start_button">
              <label for="temporal_start">Start</label>
              <%= text_field_tag(:temporal_start, params[:temporal_start],
                                 :placeholder => 'MM-DD HH:MM:SS',
                                 :class => 'temporal temporal-recurring-picker temporal-recurring-start') %>
              <button id="clear_temporal_start" class="button temporal-clear" type="button">Clear</button>
            </div>
            <div class="datetime-field" id="temporal_end_button">
              <label for="temporal_stop">End</label>
              <%= text_field_tag(:temporal_stop, params[:temporal_end],
                                 :placeholder => 'MM-DD HH:MM:SS',
                                 :class => 'temporal temporal-recurring-picker temporal-recurring-stop') %>
              <button id="clear_temporal_stop" class="button temporal-clear" type="button">Clear</button>
            </div>
            <div>
              <span class="temporal-recurring-year-range-value"></span>
              <label for="temporal-slider">Year Range</label>
              <input id="temporal-slider" class="temporal-recurring-year-range" type="text" >
            </div>
            <div class="button-row">
              <button id="temporal-recurring-submit"
                      class="button"
                      title="Apply your selections" type="button">Apply</button>
              <button id="temporal-recurring-clear"
                      class="button"
                      title="Clear your selections" type="button">Clear</button>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>


  <div class="dropdown" data-bind="with: ui.spatialType">
    <a href="#" data-toggle="dropdown" class="button dropdown-button spatial-dropdown-button"><i class="fa fa-fw" data-bind="css: icon"></i> <span class="dropdown-value" data-bind="text: name">Spatial</span> <span class="caret"></span></a>
    <ul class="dropdown-menu spatial-selection">
      <li><a href="#" class="dropdown-link select-polygon" data-bind="click: selectPolygon"><i class="edsc-icon-poly-open edsc-icon-fw"></i> Polygon</a></li>
      <li><a href="#" class="dropdown-link select-rectangle" data-bind="click: selectRectangle"><i class="edsc-icon-rect-open edsc-icon-fw"></i> Rectangle</a></li>
      <li><a href="#" class="dropdown-link select-point" data-bind="click: selectPoint"><i class="fa fa-fw fa-map-marker"></i> Point</a></li>
    </ul>
  </div>
  <a href="#datasets-overlay" class="master-overlay-show button"><i class="fa fa-search"></i> Browse All Data</a>
  <a href="#" class="button" data-bind="event: {click: query.clearFilters}"><i class="fa fa-eraser"></i> Clear Filters</a>
<% end %>

<div class="master-overlay homepage-search" id="datasets-overlay">
  <section class="master-overlay-parent">
    <header>
      <a class="master-overlay-close master-overlay-parent-close" href="#" title="close"><i class="fa fa-times-circle"></i></a>
      <h2>Browse Datasets</h2>
    </header>
  </section>
  <div class="master-overlay-main">
    <div class='master-overlay-main-content'>
      <section id="dataset-results">
        <header>
          <a class="master-overlay-close master-overlay-main-close" href="#" title="close"><i class="fa fa-times-circle"></i></a>
          <h2><strong data-bind="text: datasets.hits"></strong> Matching Datasets</h2>
          <p>
            <a href="#" class='master-overlay-hide-parent'>Hide Facets</a>
          </p>
        </header>
        <div class="master-overlay-content panel-list" data-bind="event: {scroll: datasetsList.scrolled}">
          <ul class="panel-list-list knockout-template"
              data-bind="foreach: datasets.results, css: { 'knockout-template': !bindingsLoaded }">
            <li data-bind="click: $parent.datasets.showDataset" class="panel-list-item">
              <div class="panel-list-thumbnail panel-list-thumbnail-placeholder">
                No image available
              </div>
              <h3 data-bind="text: dataset_id"></h3>
              <p class="panel-list-details">
              <span data-bind="text: short_name"></span>
              v<span data-bind="text: version_id"></span>
              - <span data-bind="text: archive_center"></span>
              </p>
            </li>
          </ul>
          <p class="panel-list-load-more" data-bind="visible: datasets.isLoading">
            Loading datasets...
          </p>
        </div>
      </section>
      <%= render partial: 'dataset_details' %>
    </div>
  </div>
</div>

<div id="map" class="map" style="height:100%; z-index:-1;">

</div>
