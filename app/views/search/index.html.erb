<% content_for :toolbar do %>
  <div class="landing-toolbar-container">
  <div class="landing-toolbar-content">
  <%= form_tag('/', method: 'get', class: 'auto-submit') do %>
    <p>
      <input id="keywords" name="keywords" class="autocomplete-placenames"
             data-bind="value: query.keywords, valueUpdate: 'keyup'"
             placeholder="Type any topic or dataset name"
             autofocus>
    </p>
  <% end %>
  <div class="dropdown">
    <a href="#" class="button temporal-dropdown-button">
      <i class="fa fa-clock-o"></i>
      <span class="dropdown-value">Temporal</span>
      <i class="fa fa-caret-down dropdown-icon"></i>
    </a>
    <ul class="dropdown-menu temporal-dropdown">
      <li>
        <ul class="nav nav-tabs">
          <li class="temporal-dropdown-link temporal-range active"><a href="#temporal-date-range" data-toggle="tab">Date Range</a></li>
          <li class="temporal-dropdown-link temporal-recurring"><a href="#temporal-recurring" data-toggle="tab">Recurring</a></li>
        </ul>
        <div class="tab-content">
          <div id="temporal-date-range" class="tab-pane active">
            <div class="datetime-field" id="temporal_start_button">
              <label for="temporal-range-start">Start</label>
              <input data-bind="value: query.temporal_range_start" id="temporal-range-start" class="temporal temporal-range-picker temporal-start temporal-range-start" type="text" placeholder="YYYY-MM-DD HH:MM:SS"/>
              <button data-bind="click: query.clearTemporal.bind($data, 'range-start')" id="clear_temporal_start" class="button temporal-clear low-priority" type="button">Clear</button>
            </div>
            <div class="datetime-field" id="temporal_end_button">
              <label for="temporal-range-stop">End</label>
              <input data-bind="value: query.temporal_range_stop" id="temporal-range-stop" class="temporal temporal-range-picker temporal-stop temporal-range-stop" type="text" placeholder="YYYY-MM-DD HH:MM:SS"/>
              <button data-bind="click: query.clearTemporal.bind($data, 'range-stop')" id="clear_temporal_stop" class="button temporal-clear low-priority" type="button">Clear</button>
            </div>
            <div class="temporal-error">Start must be no later than End</div>
            <div class="button-row">
              <button id="temporal-range-submit"
                      class="button submit"
                      title="Apply your selections" type="button">Apply</button>
              <button id="temporal-range-clear" data-bind="click: query.clearTemporal.bind($data, 'range')"
                      class="button temporal-clear temporal-range low-priority"
                      title="Clear your selections" type="button">Clear</button>
            </div>
          </div>
          <div id="temporal-recurring" class="tab-pane">
            <div class="datetime-field" id="temporal_start_button">
              <label for="temporal-recurring-start">Start</label>
              <input data-bind="value: query.temporal_recurring_start" id="temporal-recurring-start" class="temporal temporal-recurring-picker temporal-start temporal-recurring-start" type="text" placeholder="MM-DD HH:MM:SS"/>
              <button data-bind="click: query.clearTemporal.bind($data, 'recurring-start')" id="clear_temporal_start" class="button temporal-clear low-priority" type="button">Clear</button>
            </div>
            <div class="datetime-field" id="temporal_end_button">
              <label for="temporal-recurring-stop">End</label>
              <input data-bind="value: query.temporal_recurring_stop" id="temporal-recurring-stop" class="temporal temporal-recurring-picker temporal-stop temporal-recurring-stop" type="text" placeholder="MM-DD HH:MM:SS"/>
              <button data-bind="click: query.clearTemporal.bind($data, 'recurring-stop')" id="clear_temporal_stop" class="button temporal-clear low-priority" type="button">Clear</button>
            </div>
            <div class="range-slider">
                <label for="temporal-slider">Range</label>
              <input id="temporal-slider" class="temporal-recurring-year-range" type="text">
              <p><span data-bind="text: query.temporal_recurring_year_range" class="temporal-recurring-year-range-value"></span></p>

            </div>
            <div class="temporal-error">Start must be no later than End</div>
            <div class="button-row">
              <button id="temporal-recurring-submit"
                      class="button submit"
                      title="Apply your selections" type="button">Apply</button>
              <button id="temporal-recurring-clear" data-bind="click: query.clearTemporal.bind($data, 'recurring')"
                      class="button temporal-clear temporal-recurring low-priority"
                      title="Clear your selections" type="button">Clear</button>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>


  <div class="dropdown" data-bind="with: ui.spatialType">
    <a href="#" data-toggle="dropdown" class="button dropdown-button spatial-dropdown-button"><i class="fa fa-fw" data-bind="css: icon"></i> <span class="dropdown-value" data-bind="text: name">Spatial</span> <span class="caret"></span></a>
    <ul class="dropdown-menu spatial-selection">
      <li><a href="#" class="dropdown-link select-polygon" data-bind="click: selectPolygon"><i class="edsc-icon-poly-open edsc-icon-fw"></i> Polygon</a></li>
      <li><a href="#" class="dropdown-link select-rectangle" data-bind="click: selectRectangle"><i class="edsc-icon-rect-open edsc-icon-fw"></i> Rectangle</a></li>
      <li><a href="#" class="dropdown-link select-point" data-bind="click: selectPoint"><i class="fa fa-fw fa-map-marker"></i> Point</a></li>
    </ul>
  </div>
  <a href="#datasets-overlay" class="master-overlay-show button landing-hidden"><i class="fa fa-search"></i> Browse All Data</a>
  <a href="#" class="button clear-filters landing-hidden" data-bind="event: {click: query.clearFilters}"><i class="fa fa-eraser"></i> Clear Filters</a>
</div>
</div>
<% end %>

<div class="master-overlay homepage-search" id="datasets-overlay">
  <section class="master-overlay-parent">
    <header>
      <a class="master-overlay-close master-overlay-parent-close" href="#" title="close"><i class="fa fa-times-circle"></i></a>
      <h2>Browse Datasets</h2>
    </header>
    <div class="master-overlay-content panel-group">
      <div data-bind="if: query.facets().length > 0" class="panel panel-default selected-facets-panel">
        <div class="panel-heading">
          <h3 class="panel-title facet-title">
            Values Selected
          </h3>
        </div>
        <div class="panel-body facets">
          <dl>
            <!-- ko foreach: datasetFacets.applied_facets() -->
                <dt data-bind="text: type" class="facet-title"></dt>
                  <dd data-bind="" class="facets">
                    <!-- ko foreach: values.sort() -->
                    <span data-bind="click: $root.datasetFacets.loadFacet.bind($data, $parent.type, $data)" class="facets-item selected">
                        <span data-bind="text: $data" ></span>
                        <i class="fa fa-times"></i>
                      </span>
                      <span data-bind="if: $parent.values.indexOf($data) < $parent.values.length - 1"> or </span>
                    <!-- /ko -->
                  </dd>
            <!-- /ko -->
          </dl>
        </div>
      </div>
      <!-- ko foreach: datasetFacets.results -->
      <div data-bind="if: values().length > 0, css: class_name" class="panel panel-default">
        <div class="panel-heading">
          <h3 data-bind="click: toggleList" class="panel-title facet-title">
            <i data-bind="css: {'fa-caret-down': closed(), 'fa-caret-up': opened()}" class="fa pull-right"></i>
            <a data-bind="text: name, attr: {'data-target': '#collapse'+$index()}" href="#" ></a>
          </h3>
        </div>
        <div data-bind="attr: {id: 'collapse'+$index()}, css: {'facets-list-show': opened(), 'facets-list-hide': closed()}">
          <div class="panel-body facets">
            <!-- ko foreach: values() -->
            <p class="facets-item" data-bind="click: $root.datasetFacets.loadFacet.bind($data, $parent.name, term()), css: {selected: $root.datasetFacets.highlightFacet($parent.name, term)}">
              <span data-bind="text: term"></span>
              (<span data-bind="text: count"></span>)
              <i class="fa fa-times"></i>
            </p>
            <!-- /ko -->
          </div>
        </div>
      </div>
      <!-- /ko -->
    </div>
  </section>
  <div class="master-overlay-main">
    <div class='master-overlay-main-content'>
      <section id="dataset-results">
        <header>
          <a class="master-overlay-close master-overlay-main-close" href="#" title="close"><i class="fa fa-times-circle"></i></a>
          <h2><strong data-bind="text: datasets.hits"></strong> Matching Datasets</h2>
          <p>
            <a href="#" class="master-overlay-toggle-parent master-overlay-when-parent-hidden">
             <i class="fa fa-arrow-circle-left"></i> Browse Datasets
             <span data-bind="if: query.facets().length > 0">
               (<span data-bind="text: pluralize(query.facets().length, 'facet', 'facets')"></span> applied)
             </span>
            </a>
          </p>
        </header>
        <div class="master-overlay-info">
          <p data-bind="visible: project.isEmpty()">
            Add datasets to your project to compare and retrieve their data.
          </p>
          <p data-bind="visible: !project.isEmpty()">
            <a class="button" href="#"><i class="fa fa-folder-o"></i> View Project</a>
            You have <em data-bind="text: pluralize(project.datasets().length, 'dataset', 'datasets')"></em> in your project.
          </p>
        </div>
        <div class="master-overlay-content panel-list" data-bind="event: {scroll: ui.datasetsList.scrolled}">
          <ul id="dataset-results-list"
              class="panel-list-list knockout-template"
              data-bind="foreach: datasets.results, css: { 'knockout-template': !bindingsLoaded }">
            <li data-bind="click: $parent.datasets.showDataset" class="panel-list-item">
              <!-- ko if: thumbnail -->
              <img class="panel-list-thumbnail" data-bind="attr: {src: thumbnail, alt: dataset_id}">
              <!-- /ko -->
              <!-- ko ifnot: thumbnail -->
              <div class="panel-list-thumbnail panel-list-thumbnail-placeholder">
                No image available
              </div>
              <!-- /ko -->
              <h3 data-bind="text: dataset_id"></h3>
              <div class="panel-list-item-actions">
                <!-- ko if: $root.query.canQueryDatasetSpatial($data) -->
                <a href="#" class="button icon-button" title="Search using this dataset's location"
                   data-bind="css: {'button-active': $root.query.spatial() == spatial_constraint()}, click: $root.query.toggleQueryDatasetSpatial, clickBubble: false">
                  <i class="edsc-icon-fw edsc-icon-location"></i>
                </a>
                <!-- /ko -->
                <a href="#" class="button icon-button" data-transition-to="#project-count" title="Add dataset to the current project"
                   data-bind="visible: !$root.project.hasDataset($data), click: $root.project.toggleDataset, clickBubble: false">
                  <i class="fa fa-plus"></i>
                </a>
                <a href="#" class="button icon-button button-active" data-transition-from="#project-count" title="Remove dataset from the current project"
                   data-bind="visible: $root.project.hasDataset($data), click: $root.project.toggleDataset, clickBubble: false">
                  <i class="fa fa-minus"></i>
                </a>
              </div>
              <p class="panel-list-details">
              <span data-bind="text: short_name"></span>
              <!-- ko if: version_id() != 'Undefined' -->
              v<span data-bind="text: version_id"></span>
                <!-- /ko -->
              - <span data-bind="text: archive_center"></span>
              </p>
            </li>
          </ul>
          <p class="panel-list-load-more" data-bind="visible: datasets.isLoading">
            Loading datasets...
          </p>
        </div>
      </section>
      <%= render partial: 'dataset_details' %>
    </div>
  </div>
</div>

<div id="map" class="map" style="height:100%; z-index:-1;">

</div>

<div id="temporal-query" data-bind="with: ui.temporal">
  <p>Start: <span data-bind="text: start"></span></p>
  <p>Stop: <span data-bind="text: stop"></span></p>
  <p>Year Range: <span data-bind="text: years"></span></p>
