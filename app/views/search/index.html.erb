<% content_for :header do %>
<div id="login-modal" data-bind="showModal: user.needsLogin" class="modal" role="dialog" aria-labelledby="EDSC Login" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <a href="#" title="close" data-bind="click: user.cancelLogin" aria-hidden="true" class="pull-right close"><i class="fa fa-times-circle"></i></a>
        <h3 class="modal-title" id="myModalLabel">
          <!-- ko if: !user.needsUsername() && !user.needsPassword()-->
          Sign In to Earthdata Search Client
          <!-- /ko -->
          <!-- ko if: user.needsUsername() -->
          Recover Your Username
          <!-- /ko -->
          <!-- ko if: user.needsPassword() -->
          Recover Your Password
          <!-- /ko -->
        </h3>
      </div>
      <form data-bind="submit: user.processLogin">
        <div class="modal-body">
          <!-- ko if: user.message() -->
          <span class="info-alert" data-bind="text: user.message()"></span>
          <!-- /ko -->
          <!-- ko if: user.errors() -->
          <span class="error" data-bind="text: user.errors()"></span>
          <!-- /ko -->
          <!-- ko if: !user.needsUsername() -->
          <p>
            <label for="username">Username</label>
            <input type="text" id="username" data-bind="value: user.username" />
          </p>
          <!-- /ko -->
          <!-- ko if: user.needsUsername() || user.needsPassword()-->
          <p>
            <label for="email">Email</label>
            <input type="text" id="email" data-bind="value: user.email" />
          </p>
          <!-- /ko -->
          <!-- ko if: !user.needsUsername() && !user.needsPassword()-->
          <p>
            <label for="password">Password</label>
            <input type="password" id="password" data-bind="value: user.password" />
          </p>
          <!-- /ko -->
          <div class="login-modal-help">
            <!-- ko if: user.needsUsername() || user.needsPassword()-->
            <p>
              <a href="#" data-bind="click: user.beginLogin">Sign In</a>
            </p>
            <!-- /ko -->
            <p>
              Forgot your
              <a href="#" data-bind="click: user.beginUsernameRecovery">username</a> or
              <a href="#" data-bind="click: user.beginPasswordRecovery">password</a>?
            </p>
            <p>
              Need help? <a href="mailto:support@earthdata.nasa.gov">Contact URS Support.</a>
            </p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="button-light">
            <i class="fa fa-lock"></i>
            <span data-bind="text: (user.needsUsername() || user.needsPassword()) ? 'Recover' : 'Sign In'">Sign In</span></button>
        </div>
      </form>
    </div>
  </div>
</div>

<div id="dqs-modal" data-bind="showModal: ui.projectList.dataQualitySummaryModal" class="modal" role="dialog" aria-labelledby="myModalLabel">
  <!-- ko if: ui.projectList.dataQualitySummaryModal() -->
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <a href="#" title="close" data-bind="click: ui.projectList.cancelDataQualitySummaryModal" aria-hidden="true" class="pull-right close"><i class="fa fa-times-circle"></i></a>
        <h3 class="modal-title" id="myModalLabel">Data Quality Summaries</h3>
      </div>
      <form data-bind="submit: ui.projectList.acceptDataQualitySummary">
        <div class="modal-body">
          <!-- ko foreach: ui.projectList.dataQualitySummaryModal() -->
          <h3>Data Quality Summary for <span data-bind="text: dataset.dataset_id"></span></h3>
          <div data-bind="html: summary.summary"></div>
          <!-- /ko -->
        </div>
        <div class="modal-footer">
          <button type="submit" class="button-light">Accept</button>
        </div>
      </form>
    </div>
  </div>
  <!-- /ko -->
</div>

<form id="data-access" method="POST" action="/data/configure" style="display:none;">
  <div>
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
   <input id="data-access-project" name="project" type="hidden">
  </div>
</form>
<% end %>


<% content_for :footer do %>
  <%= render partial: 'timeline' %>
<% end %>
