<% content_for :javascript do %>
  <%= javascript_include_tag "search" %>
<% end %>

<% content_for :toolbar do %>
  <%= render partial: 'shared/login' %>
  <div class="landing-toolbar-container">
  <div class="landing-toolbar-content">
  <%= form_tag('/', method: 'get', class: 'auto-submit') do %>
    <p>
      <input id="keywords" type="text" name="keywords" class="autocomplete-placenames"
             data-bind="value: query.keywords, valueUpdate: 'keyup'"
             placeholder="Type any topic or dataset name"
             autofocus>
    </p>
  <% end %>
  <div class="dropdown" id="temporal-dropdown">
    <a href="#" class="button temporal-dropdown-button dropdown-button" data-toggle="dropdown">
      <i class="fa fa-clock-o"></i>
      <span class="dropdown-value">Temporal</span>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu temporal-dropdown">
      <li>
        <!-- ko with: ui.temporal.pending -->
        <%= render partial: 'temporal_template', locals: {prefix: 'dataset', show_actions: true} %>
        <!-- /ko -->
      </li>
    </ul>
  </div>


  <div class="dropdown" data-bind="with: ui.spatialType">
    <a href="#" data-toggle="dropdown" class="button dropdown-button spatial-dropdown-button"><i class="fa fa-fw" data-bind="css: icon"></i> <span class="dropdown-value" data-bind="text: name">Spatial</span> <span class="caret"></span></a>
    <ul class="dropdown-menu spatial-selection">
      <li><a href="#" class="dropdown-link select-polygon" data-bind="click: selectPolygon"><i class="edsc-icon-poly-open edsc-icon-fw"></i> Polygon</a></li>
      <li><a href="#" class="dropdown-link select-rectangle" data-bind="click: selectRectangle"><i class="edsc-icon-rect-open edsc-icon-fw"></i> Rectangle</a></li>
      <li><a href="#" class="dropdown-link select-point" data-bind="click: selectPoint"><i class="edsc-icon-fw edsc-icon-location"></i> Point</a></li>
      <li><a href="#" class="dropdown-link select-shapefile" data-bind="click: selectShapefile"><i class="edsc-icon-fw edsc-icon-file"></i> Shape File</a></li>
    </ul>
  </div>
  <a href="#" class="button clear-filters landing-hidden" data-bind="event: {click: query.clearFilters}"><i class="fa fa-eraser"></i> Clear Filters</a>
</div>
</div>
<% end %>

<div class="master-overlay homepage-search is-master-overlay-secondary-hidden" id="datasets-overlay">
  <%= render partial: 'overlay_parent' %>
  <div class="master-overlay-main">
    <div class="master-overlay-main-content" data-level="0">
      <section id="dataset-results">
        <a class="master-overlay-close master-overlay-hide" href="#" title="close"><i class="fa fa-times-circle"></i></a>
        <nav class="master-overlay-nav master-overlay-when-parent-hidden">
          <a href="#" class="master-overlay-show-parent">
            <i class="fa fa-search"></i> Browse Datasets
            <span data-bind="if: query.facets().length > 0">
               (<span data-bind="text: pluralize(query.facets().length, 'facet', 'facets')"></span> applied)
            </span>
          </a>
        </nav>
        <header>
          <h2><strong data-bind="text: datasets.hits"></strong> Matching Datasets</h2>
        </header>
        <div class="master-overlay-info">
          <p data-bind="visible: project.isEmpty()">
            Add datasets to your project to compare and retrieve their data.
          </p>
          <p data-bind="visible: !project.isEmpty()" class="button-details">
            <a class="button master-overlay-hide-parent master-overlay-forward" data-bind="click: ui.projectList.showProject" href="#">
              <i class="fa fa-folder-o"></i> View Project
            </a>
            You have <em id="project-count" data-bind="text: pluralize(project.datasets().length, 'dataset', 'datasets')"></em> in your project.
          </p>
          <p data-bind="if: datasets.loadTime() !== null" class="panel-list-meta">
            Search Time: <span data-bind="text: datasets.loadTime">0.000</span>s
          </p>
        </div>
        <div class="master-overlay-content panel-list" data-bind="event: {scroll: ui.datasetsList.scrolled}">
          <ul id="dataset-results-list"
              class="panel-list-list knockout-template"
              data-bind="foreach: datasets.results, css: { 'knockout-template': !bindingsLoaded }">
            <%= render partial: 'dataset_list_item', locals: {is_project: false} %>
          </ul>
          <p class="panel-list-load-more" data-bind="visible: datasets.isLoading">
            Loading datasets...
          </p>
        </div>
      </section>
      <section id="project-overview" data-bind="visible: ui.projectList.visible">
        <a class="master-overlay-close master-overlay-hide" href="#" title="close"><i class="fa fa-times-circle"></i></a>
        <nav class="master-overlay-nav">
          <a class="master-overlay-back master-overlay-hide-secondary" href="#" data-bind="click: project.clearSearchGranules">
            <i class="edsc-icon-arrow-left"></i> Back to Dataset Search
          </a>
        </nav>
        <header class="with-options">
          <h2>Project Datasets</h2>
          <div class="master-overlay-global-actions actions">
            <a href="#" class="button icon-button" title="Retrieve project data" data-bind="click: $root.ui.projectList.loginAndDownloadProject">
              <i class="edsc-icon-download"></i>
            </a>

            <a href="#" title="View all datasets" data-bind="visible: !datasets.allDatasetsVisible(), click: datasets.toggleViewAllDatasets.bind($data, project.datasets)" class="button icon-button" >
              <i class="edsc-icon-eye"></i>
            </a>
            <a href="#" title="Hide all datasets" data-bind="visible: datasets.allDatasetsVisible(), click: datasets.toggleViewAllDatasets.bind($data, project.datasets)" class="button icon-button button-active" >
              <i class="edsc-icon-eye"></i>
            </a>
          </div>
        </header>
        <div class="master-overlay-info">
          <div data-bind="visible: ui.projectList.datasetsHaveDQS(), css: {'message-info': ui.projectList.allDQSAccepted(), 'message-warning': !ui.projectList.allDQSAccepted()}" class="dqs-message message">Some of the datasets in your project have data quality information. You must <a data-bind="click: ui.projectList.showDataQualitySummary.bind($data,project.datasets())" class="alert-link" href="#">read and accept</a> these summaries before you can download project data.</div>
        </div>
        <div class="master-overlay-content panel-list">
          <ul id="project-datasets-list"
              class="panel-list-list knockout-template"
              data-bind="foreach: project.datasets, css: { 'knockout-template': !bindingsLoaded }">
            <%= render partial: 'dataset_list_item', locals: {is_project: true} %>
          </ul>
        </div>
      </section>
      <%= render partial: 'granule_list' %>
      <%= render partial: 'dataset_details' %>
    </div>
  </div>
  <div class="master-overlay-secondary">
    <div class="master-overlay-secondary-content" data-level="0">
      <section id="granule-search" >
          <a data-bind="click: ui.projectList.hideFilters" class="master-overlay-close master-overlay-hide-secondary" href="#" title="close"><i class="fa fa-times-circle"></i></a>
        <nav class="master-overlay-nav">
          Granule Filters
        </nav>
        <!-- ko if: project.searchGranulesDataset() -->
        <header>
          <h2 data-bind="text: project.searchGranulesDataset().dataset_id"></h2>
        </header>
        <%= render partial: 'granule_search' %>
        <!-- /ko -->
      </section>
    </div>
  </div>
  <div class="master-overlay-minimized">
    <a href="#datasets-overlay" class="button text-button master-overlay-show">
      <i class="fa fa-th-list"></i> Results List
    </a>
  </div>
</div>

<div id="map" class="map" style="height:100%">
  <div id="map-center"></div>
  <!-- ko if: ui.datasetsList.focused() && ui.datasetsList.focused().stickied() && ui.datasetsList.focused().stickied().browse_flag === 'true' -->
  <!-- ko with: ui.datasetsList.focused() -->
  <div class="granule-browse" data-bind="css: {busy: loadingBrowse()}">
    <a data-bind="attr: {href: stickied().edsc_full_browse_url()}" target="_blank" title="View full image">
      <img data-bind="attr: {src: stickied().edsc_browse_url(256)}, event: {load: finishLoad}" alt="Browse preview" title="View full image">
    </a>
  </div>
  <!-- /ko -->
  <!-- /ko -->
  <%#
  <!-- ko stopBinding: true -->
  <div id="granule-info" class="granule-info map-tooltip" data-bind="if: granules() && isCurrent()">
    <div class="map-tooltip-content">
      <!-- ko if: !granules().isLoaded() -->
      <p class="busy">Loading granules...</p>
      <!-- /ko -->
      <!-- ko if: granules().isLoaded() -->
      <p>
        <span data-bind="text: granules().hits() == 1 ? '1 Granule' : granules().hits() + ' Granules'"></span>
        at this location
      </p>
      <!-- ko if: granules().hits() > 0 -->
      <p class="map-tooltip-action">Click map for details</p>
      <!-- /ko -->
      <!-- /ko -->
    </div>
  </div>
  <!-- /ko -->
   %>
  <%# Container lets leaflet move this around the DOM without messing up knockout bindings %>
  <%#
  <script id="granule-details-template" type="text/html">
    <div id="map-granule-details" class="granule-details" data-bind="if: granules()">
      <!-- ko if: !granules().isLoaded() -->
      <p class="busy">Loading granules...</p>
      <!-- /ko -->
      <!-- ko if: granules().isLoaded() && granules().results().length > 0 -->
      <p class="map-popup-info">
        <span data-bind="text: granules().hits() == 1 ? '1 Granule' : granules().hits() + ' Granules'"></span>
        at this location
      </p>
      <ul class="map-popup-pane map-popup-pane-x" data-bind="event: {scroll: scrolled}">
        <!-- ko foreach: granules().results() -->
        <li class="map-popup-pane-item">
          <p class="map-popup-pane-label">
            <span data-bind="text: time_start"></span>
            <span data-bind="text: time_end"></span>
          </p>
          <!-- ko if: browse_flag === "true" -->
          <img class="browse-thumbnail" data-bind="attr: {src: edsc_browse_url(), title: title}">
          <!-- /ko -->
          <!-- ko if: browse_flag !== "true" -->
          <div class="browse-thumbnail browse-thumbnail-none">
            No browse imagery
          </div>
          <!-- /ko -->
        </li>
        <!-- /ko -->
        <!-- ko if: granules().hasNextPage() -->
        <li class="busy map-popup-pane-item map-popup-pane-more">
          Loading...
        </li>
        <!-- /ko -->
      </ul>
      <!-- /ko -->
      <!-- ko if: granules().isLoaded() && granules().results().length == 0 -->
      <p>No Granules</p>
      <!-- /ko -->
    </div>
  </script>
  %>

  <div class="geojson-help">
    <div class="geojson-help-dropzone">
      <h1>Search by Shape File</h1>
      <p>
        <a class="geojson-dropzone-link" href="#">Click here</a> to select a shape file.  You may also
        simply drag and drop shape files onto the map at any time.
      </p>
      <p>
        Valid formats include:
      </p>
      <ul>
        <li>ESRI Shapefile (.zip including .shp, .dbf, and .shx file)</li>
        <li>Keyhole Markup Language (.kml or .kmz)</li>
        <li>GeoJSON (.json or .geojson)</li>
        <li>GeoRSS (.rss, .georss, or .xml)</li>
      </ul>
      <button data-bind="click: ui.spatialType.selectNone"
              class="button text-button" type="button">Cancel</button>
    </div>
  </div>
</div>

<div id="temporal-query" data-bind="with: ui.temporal.applied">
  <p>
    <i class="fa fa-clock-o"></i>
    <span data-bind="visible: start.date">
      <strong>Start</strong>
      <span data-bind="text: start.humanDateString"></span>
    </span>
    <span data-bind="visible: stop.date">
      <strong>Stop</strong>
      <span data-bind="text: stop.humanDateString"></span>
    </span>
    <span data-bind="visible: (start.date() || stop.date()) && isRecurring()">
      <strong>Range</strong> <span data-bind="text: yearsString"></span>
    </span>
  </p>
</div>

