<div id="login-modal" data-bind="showModal: user.needsLogin" class="modal" role="dialog" aria-labelledby="EDSC Login" data-backdrop="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <a href="#" title="close" data-bind="click: user.cancelLogin" aria-hidden="true" class="pull-right close"><i class="fa fa-times-circle"></i></a>
        <h3 class="modal-title" id="myModalLabel">Sign In to Earthdata Search Client</h3>
      </div>
      <form data-bind="submit: user.login">
        <div class="modal-body">
          <!-- ko if: user.errors() -->
          <span class="error" data-bind="text: user.errors()"></span>
          <!-- /ko -->
          <p>
            <label for="username">Username</label>
            <input type="text" id="username" data-bind="value: user.username" />
          </p>
          <p>
            <label for="password">Password</label>
            <input type="password" id="password" data-bind="value: user.password" />
          </p>
        </div>
        <div class="modal-footer">
          <button type="submit" class="button-light"><i class="fa fa-lock"></i> Sign In</button>
        </div>
      </form>
    </div>
  </div>
</div>

<form id="data-access" method="POST" action="/data/configure" style="display:none;">
  <div>
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
   <input id="data-access-project" name="project" type="hidden">
  </div>
</form>
