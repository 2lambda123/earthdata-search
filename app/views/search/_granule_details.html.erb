<!-- ko if: $root.ui.datasetsList.focused() -->
<!-- ko if: $root.ui.datasetsList.focused().selected() -->
<section id="granule-details" class="details">
  <a class="master-overlay-close master-overlay-hide" href="#" title="close"><i class="fa fa-times-circle"></i></a>
  <nav class="master-overlay-nav">
    <a href="#" class="master-overlay-back" data-bind="click: ui.datasetsList.focused().hideGranuleDetails">
      <i class="fa fa-arrow-circle-left"></i> <span class="master-overlay-breadcrumb">Back to Granules</span>
    </a>
  </nav>
  <!-- ko if: $root.ui.datasetsList.focused() -->
  <!-- ko with: $root.ui.datasetsList.focused() -->
  <!-- ko if: selected() -->
  <header >
    <h2 data-bind="ifnot: selected().detailsLoaded" class="loading">Details Loading...</h2>
    <!-- ko if: selected().detailsLoaded -->
    <h2 data-bind="text: selected().title"></h2>
    <!-- /ko -->
  </header>
  <!-- /ko -->

  <ul id="granule-details-nav" class="nav nav-tabs">
    <li class="active"><a href="#granule-information" data-toggle="tab">Information</a></li>
    <li><a href="#granule-metadata" data-toggle="tab">Metadata</a></li>
  </ul>
  <!-- ko if: selected() -->
  <!-- ko with: selected().details() -->
  <div class="tab-content">
    <div class="tab-pane active" id="granule-information">
      <% if Rails.configuration.feedback_url.present? %>
        <a href="javascript:void(0)" data-bind="click: $root.ui.datasetsList.focused().showFeedback" class="feedback button" title="Leave metadata feedback">
          <i class="fa fa-bullhorn"></i>
        </a>
      <% end %>

      <div data-bind="text: $data.xml" class="master-overlay-content details-content"></div>

    </div>

    <div class="tab-pane" id="granule-metadata">
      <dl class="master-overlay-content">
        <dt>Download Metadata:</dt>
        <dd><a data-bind="attr: { href: $data.native_url }">Native</a></dd>
        <dd><a data-bind="attr: { href: $data.atom_url }">ATOM</a></dd>
        <dd><a data-bind="attr: { href: $data.echo10_url }">ECHO 10</a></dd>
        <dd><a data-bind="attr: { href: $data.iso19115_url }">ISO 19115</a></dd>
      </dl>
    </div>
  </div>
  <!-- /ko -->
  <!-- /ko -->

  <!-- /ko -->
  <!-- /ko -->
</section>
<!-- /ko -->
<!-- /ko -->
